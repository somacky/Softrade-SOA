      <add contractName   = "IRFCRepositorioConfig"
           typeName       = "CustomSoft.Template.Repositorio.SqlServer.RFCRepositorio"
           libraryName    = "CustomSoft.Template.Repositorio.SqlServer" />

    </factorySettings>
  </factoryConfiguration>
  <!--fin agregado-->
  

