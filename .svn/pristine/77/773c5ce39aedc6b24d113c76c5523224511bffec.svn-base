        }

        public static byte[] GetXmlBytes(object objeto)
        {
            byte[] data;
            var ms = new MemoryStream();
            var serializer = new XmlSerializer(objeto.GetType());
            serializer.Serialize(ms,objeto);
            data = ms.ToArray();
            return data;
        }
    }
